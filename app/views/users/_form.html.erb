<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<div class='signupform'>
  <div class="field">
    <%= f.label :username %><br>
    <div class='explain'>must be between 4 and 11 characters</div>
    <%= f.text_field :username %>
  </div>
  <div class="field">
    <%= f.label :email %><br>
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label :password %><br>
    <div class='explain'>must be between 5 and 14 characters</div>
    <%= f.password_field :password %>
  </div>
  <div class="field">
    <%= f.label :confirm_password %><br>
    <%= f.password_field :password_confirmation %>
  <div class="actions">
    <%= f.submit %>
  </div>
</div>

<% end %>
