<div class='logindivback'>
<div class='logindiv'>
	<%= form_tag "/login", method:"post", class:'login' do %>
	  <div class='userback'><%=text_field_tag :username, params[:username], :placeholder => "Username" %></div>
	  <div class='passback'><%=password_field_tag :password, nil, :placeholder => "Password" %></div>
	  <%=submit_tag :"Log in" %>
	<% end %>
</div>
</div>

<div class='userback'>
<%= link_to 'Back', '/' , class: 'rboxes' %>
</div>