<h1>Draw it! Describe it!</h1>

		<% if current_user %>
	<%= current_user.username %>
	<%= link_to "Log Out", '/logout' %>
		<% else %>
	<%= link_to "Sign Up", new_user_path, class: 'boxes' %>
	<%= link_to "Log In", '/login', class: 'boxes' %>
		<% end %>


<% if @pdrawing %>
	<div class="pdrawing">
		<%= @drawing.image.url(:medium) %>
	</div>

	<% if current_user %>
		<div class='mkdesdiv'>
			<%= form_for :comment, url: "/posts/#{@post.id}/comments", html: { class:'newcomment' } do |f| %>
				<%=f.label :"Write Your Description" %><br />
				<%=f.text_area :content, :placeholder => "Go ahead..." %><br>
				<%=f.submit :"Comment" %>
			<% end %>
		</div>
	<% end %>

	<div class='desdiv'>
		
		<h2>Descriptions</h2>

		<% if @cdescriptions %>
			<% @cdescriptions.each do |x| %>	

				<div class=''>
					<%= link_to "Vote", like_drawing_path(x), method: :put %>
					<%= x.score %>
					<%= x.content %>
				</div>
				

			<% end %>
		<% end %>
	</div>










<% else %>
	<div class='pdes'>
		<%= @pdescription.content %>	
	</div>


	<% if current_user %>
		<div class='mkdrawdiv'>
			<%= form_for @drawing, html: { class:'newdrawing', multipart: true } do |f| %>
				<%= f.file_field :image %>
				<%=f.submit :"Submit Drawing" %>
			<% end %>
		</div>
	<% end %>


	<div class='drawdiv'>

		<h2>Drawings</h2>
		
		<% if @cdrawing %>
			<% @cdrawing.each do |x| %>	

				<div class=''>
					<%= link_to "Vote", like_drawing_path(x), method: :put %>
					<%= x.score %>
					<%= image_tag x.image.url(:small) %>
				</div>
				

			<% end %>
		<% end %>
		
	</div>

<% end %>






