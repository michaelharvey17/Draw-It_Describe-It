<h1>Home#index</h1>

		<% if current_user %>
	<%= current_user.username %>
	<%= link_to "Log Out", '/logout' %>
		<% else %>
	<%= link_to "Sign Up", new_user_path, class: 'boxes' %>
	<%= link_to "Log In", '/login', class: 'boxes' %>
		<% end %>


<% if @pdrawing %>
	<div class="pdrawing">
		<%= @drawing.image %>
	</div>

	<% if current_user %>
		<div class='mkdesdiv'>
			<%= form_for :comment, url: "/posts/#{@post.id}/comments", html: { class:'newcomment' } do |f| %>
				<%=f.label :"Write Your Description" %><br />
				<%=f.text_area :content, :placeholder => "Go ahead..." %><br>
				<%=f.submit :"Comment" %>
			<% end %>
		</div>
	<% end %>

	<div class='desdiv'>
		
		<h2>Descriptions</h2>
		
		<% @pdrawing.description.each do |x| %>	
			<% if @pdrawing.description %>
			
				<div class=''><%= x.content %></div>	
			
			<% end %>
		<% end %>
	</div>










<% else %>
	<div class='pdes'>
		<%= @pdescription.content %>	
	</div>


	<% if current_user %>
		<div class='mkdrawdiv'>
			<%= form_for 'drawing', html: { class:'newdrawing', multipart: true } do |f| %>
				<%= f.file_field :image %>
				<%=f.submit :"Drawed" %>
			<% end %>
		</div>
	<% end %>


	<div class='drawdiv'>

		<h2>Drawings</h2>
		
		<% if @pdescription.drawing %>
			<% @pdescription.drawing.each do |x| %>	

				<div class=''><%= x.image %></div>

			<% end %>
		<% end %>
		
	</div>

<% end %>






