<div class='topback'>
	<%= link_to "<div class='top'>
		<h1>Draw it!<br>Describe it!</h1>
	</div>".html_safe, '/', class: 'homelink' %>
</div>

<div class='cornerback'>
	<div class='corner'>
		<% if current_user %>
			<div class='currentbox'><%= current_user.username %></div>
			<%= link_to "LOG OUT", '/logout', class: 'boxes' %>
		<% else %>
			<%= link_to "SIGN UP", new_user_path, class: 'boxes' %>
			<%= link_to "LOG IN", '/login', class: 'boxes' %>
		<% end %>
	</div>
</div>

<div class='headerback'>
	<div class='header'>
		WINNERS ARCHIVE
	</div>
</div>

<div class='archivebuttonsback'>
	<div class="archivebuttons">
		<button class="archive_button", id="des_button">Winning Descriptions</button>
		<button class="archive_button", id="draw_button">Winning Drawings</button>
	</div>
</div>

<div class="archiveback">
	<div class="archive">	
		<div class="archive_main" id="des_archive">
			<% @descriptions.each do |x| %>
				<div class='cdesboxback'>
					<div class='cdes'>
						<%= x.content %>
					</div>

					<div class='cdeslike'>
						<div class='archiveby'>
							by: <%= x.user.username %>
						</div>
						
						<div class='count-des'>
							<span>Champion!</span>
						</div>
					</div>
				</div>
			<% end %>
		</div>

		<div class="archive_main" id="draw_archive">
			<% @drawings.each do |x| %>
				<div class='cdrawboxback'>
					<div class='cdrawbox'>
						<div class='cdraw'>
							<%= image_tag x.image %>
						</div>

						<div class='cdrawlike'>
							<div class='archiveby'>
								by: <%= x.user.username %>
							</div>
						
							<div class='count-draw'>
								<span>Champion!</span>
							</div>
						</div>
					</div>
				</div>
			<% end %>
		</div>
	</div>
</div>

<div class='rcornerback'>
	<div class='rcorner'>
		<%= link_to "Losers Archive", '/losers', class: 'rboxes' %>
	</div>
</div>