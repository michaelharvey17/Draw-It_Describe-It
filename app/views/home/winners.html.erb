<div class='topback'>
	<div class="top">
		<h1>Winners Archive</h1>
	</div>
</div>
<div class="navback">
	<div class="nav">
		<a href="/">Home</a>
	</div>
</div>
<div class='cornerback'>
	<div class='corner'>
		<% if current_user %>
			<div class='boxes'><%= current_user.username %></div>
			<%= link_to "LOG OUT", '/logout', class: 'boxes' %>
		<% else %>
			<%= link_to "SIGN UP", new_user_path, class: 'boxes' %>
			<%= link_to "LOG IN", '/login', class: 'boxes' %>
		<% end %>
	</div>
</div>

<div class="mainback">
	<div class="main">
		<div class="header">
			<button class="archive_button", id="des_button">Describe It!</button>
			<button class="archive_button", id="draw_button">Draw It!</button>
		</div>
		
		<div class="archive_main" id="des_archive">
			<% @descriptions.each do |x| %>
				<div class='cdesboxback'>
					<div class='cdes'>
						<%= x.content %>
					</div>
					<div class='cdeslike'>
						<%= x.user.username %>
						<div class='count'>
							<span>Winner!</span>
						</div>
					</div>
				</div>
			<% end %>
		</div>

		<div class="archive_main" id="draw_archive">
			<% @drawings.each do |x| %>
				<div class='cdrawboxback'>
					<div class='cdrawbox'>
						<div class='cdraw'>
							<%= image_tag x.image %>
						</div>
						<div>
							<%= x.user.username %>
						</div>
						
						<div class='count'>
							<span>Winner!</span>
						</div>
						
					</div>
				</div>
			<% end %>
		</div>
	</div>
</div>

