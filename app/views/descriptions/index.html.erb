<h1>Listing Descriptions</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Draw</th>
      <th>Counter</th>
      <th>Parent</th>
      <th>Active</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @descriptions.each do |description| %>
      <tr>
        <td><%= description.user_id %></td>
        <td><%= description.draw_id %></td>
        <td><%= description.counter %></td>
        <td><%= description.parent %></td>
        <td><%= description.active %></td>
        <td><%= link_to 'Show', description %></td>
        <td><%= link_to 'Edit', edit_description_path(description) %></td>
        <td><%= link_to 'Destroy', description, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

