<p id="notice"><%= notice %></p>

<h1>Listing Drawings</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Des</th>
      <th>Counter</th>
      <th>Parent</th>
      <th>Active</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @drawings.each do |drawing| %>
      <tr>
        <td><%= drawing.user_id %></td>
        <td><%= drawing.des_id %></td>
        <td><%= drawing.counter %></td>
        <td><%= drawing.parent %></td>
        <td><%= drawing.active %></td>
        <td><%= link_to 'Show', drawing %></td>
        <td><%= link_to 'Edit', edit_drawing_path(drawing) %></td>
        <td><%= link_to 'Destroy', drawing, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

